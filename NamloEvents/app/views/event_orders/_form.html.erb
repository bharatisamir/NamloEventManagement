
<div class="container" id="event_order_container">
  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Search Event by Host's email</h3>
        </div><!-- end panel-heading -->
        <br />
        <div class="event_search">
          <%= form_tag new_event_order_path, :method => 'get' do %>
              <p>
                <%= text_field_tag :search, params[:search],placeholder: 'Enter email', :size => '30' %>
                <%= submit_tag "Search", :name => nil %>
              </p>
          <% end %>
        </div>
        <hr>
        <p>
          <% if (@events == nil || @host == nil) %>
              <% if params[:search]%>
                <p align="center", class="error_message"> Sorry, no events found for host with email: <%= params[:search] %> </p>
            <% end %>

        <% else %>
            <div class="table-responsive">
              <table class="table">
                <thead>
                <tr class="info">
                  <th>Event Name</th>
                  <th>Event ID</th>
                  <th>Event Date</th>
                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @events.each do |event| %>
                    <tr class="success">
                      <td><%= event.event_name %></td>
                      <td><%= event.id %></td>
                      <td><%= event.event_date %></td>
                      <td></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
        <% end %>
        </p>

      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for(@event_order) do |f| %>
              <% if @event_order.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@event_order.errors.count, "error") %> prohibited this event_order from being saved:</h2>

                    <ul>
                      <% @event_order.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group">
                <%= f.label :order_date %>
                <%= f.date_select :order_date, class:'form-control'  %>
              </div>

              <div class="form-group">
                <%= f.label :primary_onsite_contact %>
                <%= f.text_field :primary_onsite_contact, class:'form-control'  %>
              </div>

              <div class="form-group">
                <%= f.label :secondary_onsite_contact %>
                <%= f.text_field :secondary_onsite_contact, class:'form-control'  %>
              </div>

              <div class="form-group">
                <%= f.label :primary_phone %>
                <%= f.text_field :primary_phone, class:'form-control'  %>
              </div>

              <div class="form-group">
                <%= f.label :secondary_phone %>
                <%= f.text_field :secondary_phone, class:'form-control'  %>
              </div>

              <% if @event_options!= nil %>
                  <div class="form-group">
                    <%= f.label :event_id, 'Event ID (required)' %><br>
                    <%= f.select :event_id, options_for_select(@event_options), prompt: 'Select Event id', id: 'event_select'  %>
                  </div>

              <%end%>

              <!--<div class="form-group">
                <%= f.label :event_id, 'Event ID' %>
                <%= f.text_field :event_id, class:'form-control'  %>
              </div>-->

              <div class="actions" id="submit_button">
                <%= f.submit %>
              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Your Name :: Here</h3>
        </div><!-- end panel-heading -->
        <%= image_tag( 'missing.png', :alt =>'Default image', :class =>'img-circle') %>
        <p></p>
        <p align="center">"Advertise your self with us. Please contact us for further details"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end event_order_container -->
























