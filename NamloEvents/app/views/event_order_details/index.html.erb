

<%#= link_to 'New Event Order Detail', new_event_order_detail_path %>

<div class="container" id="event_order_details_index_container">
  <div class="page-header">
    <h1>Your Event Order Details </h1>
  </div>

  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Search Event Order by Host's email</h3>
        </div><!-- end panel-heading -->
        <br />
        <div class="event_search">
          <%= form_tag event_orders_path, :method => 'get' do %>
              <p>
                <%= text_field_tag :search, params[:search],placeholder: 'Enter email', :size => '30' %>
                <%= submit_tag "Search", :name => nil %>
              </p>
          <% end %>
        </div>
        <hr>
        <p>
          <% if (@events == nil || @host == nil) %>
              <% if params[:search]%>
                <p align="center", class="error_message"> Sorry, no events found for host with email: <%= params[:search] %> </p>
            <% end %>

        <% else %>
            <% @events.each do |event| %>
                <div class="table-responsive">
                  <table class="table">
                    <tbody>
                    <tr class="success">
                      <td> <strong>Event ID:</strong></td>
                      <td><em><strong><%= event.id %></strong></em></td>
                      <td> <strong>Event Date:</strong></td>
                      <td><em><strong><%= event.event_date %></strong></em></td>
                    </tr>
                    </tbody>
                  </table>
                </div>
            <% end %>
        <% end %>
        </p>

      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">

          <p>
            <% if (@event_order_details == nil || @host == nil) %>
                <% if params[:search2]%>
                  <p align="center", class="error_message"> Sorry, no event order found for event with event id: <%= params[:search2] %> </p>
              <% end %>

          <% else %>
              <% @event_order_details.each do |event_order_detail| %>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                      <tr class="info">
                        <th>Service date</th>
                        <th>Service start time</th>
                        <th>Service end time</th>
                        <th>Function</th>
                        <th>Service location</th>
                        <th>Service setup requirements</th>
                        <th>Event order</th>
                        <th>Service</th>
                        <th>Service provider</th>
                        <th colspan="3"></th>
                      </tr>
                      </thead>
                      <tbody>
                      <tr class="success">
                        <td><%= event_order_detail.service_date %></td>
                        <td><%= event_order_detail.service_start_time %></td>
                        <td><%= event_order_detail.service_end_time %></td>
                        <td><%= event_order_detail.function %></td>
                        <td><%= event_order_detail.service_location %></td>
                        <td><%= event_order_detail.service_setup_requirements %></td>
                        <td><%= event_order_detail.event_order %></td>
                        <td><%= event_order_detail.service %></td>
                        <td><%= event_order_detail.service_provider %></td>
                        <td><%#= link_to 'Show', event_order_detail %></td>
                        <td><%= link_to 'Edit', edit_event_order_detail_path(event_order_detail) %></td>
                        <td><%= link_to 'Destroy', event_order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                      </tbody>
                    </table>
                  </div>
              <% end %>
          <% end %>
          </p>


        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Search Event Order details by Event ID</h3>
        </div><!-- end panel-heading -->
        <br />
        <div class="event_search">
          <%= form_tag event_order_details_path, :method => 'get' do %>
              <p>
                <%= text_field_tag :search2, params[:search2],placeholder: 'Enter Event ID from Search result', :size => '30' %>
                <%= submit_tag "Search", :name => nil %>
              </p>
          <% end %>
        </div>
        <hr>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->


  </div><!-- end row -->
</div><!-- end event_order_details_index_container -->

<br>
















