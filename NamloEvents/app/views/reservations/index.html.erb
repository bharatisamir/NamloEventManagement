

<h2>Reservations</h2>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Complete address</th>
      <th>Primary phone</th>
      <th>Attending event</th>
      <th>Total attending</th>
      <th>Food choice</th>
      <th>Kids meal required</th>
      <th>Need paper invitation</th>
      <th>Food allergies</th>
      <th>Special notes</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.first_name %></td>
        <td><%= reservation.last_name %></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.complete_address %></td>
        <td><%= reservation.primary_phone %></td>
        <td><%= reservation.attending_event %></td>
        <td><%= reservation.total_attending %></td>
        <td><%= reservation.food_choice %></td>
        <td><%= reservation.kids_meal_required %></td>
        <td><%= reservation.need_paper_invitation %></td>
        <td><%= reservation.food_allergies %></td>
        <td><%= reservation.special_notes %></td>
        <td><%= reservation.event %></td>
        <td><%#= link_to 'Show', reservation %></td>
        <td><%#= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%#= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

