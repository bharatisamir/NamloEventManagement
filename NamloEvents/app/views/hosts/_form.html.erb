<div class="container" id="host_container">
  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Artist :: Amy</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/amy-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Let me help you get all of your guest to the dance floor and make them groove as if no body is watchin"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for [@user, @host] do |f| %>
              <% if @host.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@host.errors.count, "error") %> prohibited this host from being saved:</h2>

                    <ul>
                      <% @host.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <!--<div class="field">
                <%= f.label :user_id %>
                 <%= f.text_field :user_id %>
               </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'user_id', @user.id %>
              </div>

              <div class="actions" id="submit_button">
                <%= f.submit %>
              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Cinematographer :: Anoj</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/anoj-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"With today's technology anyone can point and shoot a video. But, the true magic of cinema can only be delivered by professional cinematographer"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end new_password_container -->










