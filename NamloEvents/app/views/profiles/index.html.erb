<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Street address</th>
      <th>City</th>
      <th>State province</th>
      <th>Zip postal code</th>
      <th>Country region</th>
      <th>Home phone</th>
      <th>Cell phone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.street_address %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state_province %></td>
        <td><%= profile.zip_postal_code %></td>
        <td><%= profile.country_region %></td>
        <td><%= profile.home_phone %></td>
        <td><%= profile.cell_phone %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

