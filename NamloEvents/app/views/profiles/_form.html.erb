<div class="container" id="profile_container">
  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Cinematographer :: Bishal</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/bishal-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"With today's technology anyone can point and shoot a video. But, the true magic of cinema can only be delivered by professional cinematographer"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for [@user, @profile],html: {multipart: true} do |f| %>
              <% if @profile.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

                    <ul>
                      <% @profile.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group">
                <%= f.label :street_address %>
                <%= f.text_field :street_address, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :city %>
                <%= f.text_field :city, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :state_province %>
                <%= f.text_field :state_province, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :zip_postal_code %>
                <%= f.text_field :zip_postal_code, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :country_region %>
                <%= f.text_field :country_region, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :home_phone %>
                <%= f.text_field :home_phone, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :cell_phone %>
                <%= f.text_field :cell_phone, class: 'form-control' %>
              </div>

              <!--<div class="form-group">
                <%= f.label :image %><br>
                <%= f.file_field :image, class:'form-control' %>
              </div>-->

              <div class="field">
                <%= f.label :image %><br>
                <%= f.file_field :image %>
              </div>

              <!--<div class="hidden">
                <%= f.label :user_id %>
                <%= f.text_field :user_id %>
              </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'user_id', @user %>
              </div>

              <p></p>

              <div class="actions">
                <%= f.submit  %>
              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Photographer :: Bipin</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/bipin-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Photos are windows to past. Make every moments of your past memorable by hiring the right photographer"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end profile_container -->

