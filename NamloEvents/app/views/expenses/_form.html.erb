

<%= form_for [@event, @expense] do |f| %>
    <% if @expense.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

          <ul>
            <% @expense.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :expense_date %>
      <%= f.date_select :expense_date, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :expense_source %>
      <%= f.text_field :expense_source, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :budgeted_amount %>
      <%= f.number_field :budgeted_amount, class:'form-control' %>
    </div>

        <div class="form-group">
          <%= f.label :actual_amount %>
          <%= f.number_field :actual_amount, class:'form-control' %>

        </div>


    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class:'form-control' %>
    </div>

    <!--<div class="form-group">
      <%= f.label :event_id, 'Event ID' %>
      <%= f.text_field :event_id,placeholder: 'Enter id of the event from search result', class:'form-control'  %>
    </div>-->

    <div class="hidden">
      <%= hidden_field_tag 'event_id', @event.id %>
    </div>

    <div class="actions" id="submit_button">
      <%= f.submit %>
    </div>
<% end %>