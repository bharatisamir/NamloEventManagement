<script>
  function initMap() {

    var uluru = {lat: <%= @location.first %>, lng: <%= @location.second %>};
    var map = new google.maps.Map(document.getElementById('map-canvas'), {
      zoom: 15,
      center: uluru
    });
    var marker = new google.maps.Marker({
      position: uluru,
      map: map
    });
  }
</script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCyNqueIsJWMv7BK67hO6jhWfXT2rpd1BM&callback=initMap">
