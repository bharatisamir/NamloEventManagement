

<div class="container">

  <h2 align="middle" id="event_detail">Event Details</h2>
  <div class="row">

    <div class="col-sm-12">
      <div class="event_map">
        <% if  @invitation_event!= nil %>
            <h3>Event Venue Map </h3>
            <div id="map-container">
              <div id="map-canvas">
                <%#= image_tag google_map(center: location.address)%>
                <%#= image_tag google_map(center: [ @location.first, @location.second ].join(',')) %>
                <%#= image_tag "http://maps.google.com/maps/api/staticmap?size=900x385&sensor=false&zoom=16&markers=#{@location.first}%2C#{@location.second}" %>

              </div>
            </div>
        <%end%>
      </div>
    </div>

  </div>
  <br>

  <div class="row">

    <div class="col-sm-2">

    </div>

    <div class="col-sm-8">
      <div class="event_detail">
        <% if @invitation_event!= nil %>
              <div class="list-group">
                <div class="list-group-item">
                  <h3 class="list-group-item-heading"><%=@invitation_event.event_name%></h3>
                  <p class="list-group-item-text">
                    <%= @invitation_event.event_date.strftime('%A, %B %e, %Y') %>
                  </p>

                  <p class="list-group-item-text">
                  <%= @invitation_event.event_start_time.strftime('%I:%M %p') %> - <%= @invitation_event.event_end_time.strftime('%I:%M %p') %>
                  </p>

                </div><!-- end list-group-item -->

                <div class="list-group-item">
                  <h3 class="list-group-item-heading">Venue</h3>
                  <p class="list-group-item-text">
                    <%= @invitation_event.venue %>
                  </p>

                  <p class="list-group-item-text">
                    <%= @invitation_event.street_address %>
                  </p>

                  <p class="list-group-item-text">
                    <%= @invitation_event.city %>, <%= @invitation_event.state_province %> <%= @invitation_event.zip_postal_code %>
                  </p>

                  <p class="list-group-item-text">
                    <%= @invitation_event.country_region %>
                  </p>

                </div><!-- end list-group-item -->


                <div class="list-group-item">
                  <h3 class="list-group-item-heading">Confusions ?</h3>
                  <p class="list-group-item-text">
                    <%= @invitation_event.event_contact %>
                  </p>
                </div><!-- end list-group-item -->


            <%if @invitation_event.comments != '' %>
            <div class="list-group-item">
              <h2 class="list-group-item-heading">Special Notes</h2>
              <p class="list-group-item-text">
                <%= @invitation_event.comments %>
              </p>
            </div><!-- end list-group-item -->
            <%end%>
            </div><!-- end list-group -->
        <%end%>
      </div>
    </div>

    <div class="col-sm-2">

    </div>

    <div id="map">

    </div>

  </div>
</div>



