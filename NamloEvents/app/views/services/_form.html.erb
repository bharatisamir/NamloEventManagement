
<div class="container" id="service_container">

  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Editor :: Sushan</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/sushan-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"World is full of imperfections and only true professional editor can beautifully mask the blemishes of natural world"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for(@service) do |f| %>
              <% if @service.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

                    <ul>
                      <% @service.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group">
                <%= f.label :service_name %>
                <%= f.text_field :service_name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :service_description %>
                <%= f.text_area :service_description, class: 'form-control' %>
              </div>

              <div class="actions" id="submit_button">
                <%= f.submit %>
              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Editor :: Swaroop</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/swaroop-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"World is full of imperfections and only true professional editor can beautifully mask the blemishes of natural world"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end service_container -->








