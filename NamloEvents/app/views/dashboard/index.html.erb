<div class="container" id="dashboard_container">
  <div class="page-header">
    <h1>TabbedBoards</h1>
  </div><!-- end page-header -->

  <div id="more_info" class="row">
    <div class="">

    </div><!-- end class -->

    <div class="col-sm-12">
      <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#Profile" data-toggle="tab"><h4>User's Profile</h4></a>
          </li>
          <li>
            <a href="#Host" data-toggle="tab"><h4>Host's Dashboard</h4></a>
          </li>
