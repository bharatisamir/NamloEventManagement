                </div><!-- end list-group -->
              </div><!-- end col-sm-7 -->

              <div class="col-sm-4">

              </div><!-- end col-sm-4 -->

              <div class="col-sm-7">
                <div class="list-group">
                  <div class="list-group-item">
                    <div class="list-group-item-heading">
                      <h5>Activities</h5>
                    </div><!-- end list-group-item-heading -->
