<div class="container" id="todolist_container">
  <div class="row">
    <div class="col-sm-4 feature">

    </div><!-- end col-sm-2 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for [@user, @to_do_list] do |f| %>
              <% if @to_do_list.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@to_do_list.errors.count, "error") %> prohibited this to_do_list from being saved:</h2>

                    <ul>
                      <% @to_do_list.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group">
                <%= f.label :todo_list_title %>
                <%= f.text_field :todo_list_title, class:'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :todo_list_description %>
                <%= f.text_area :todo_list_description, class:'form-control' %>
              </div>

              <!--<div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'user_id', @user %>
              </div>

              <div class="actions" id="submit_button">

                <%= f.submit %>

              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">

    </div><!-- end col-sm-2 -->
  </div><!-- end row -->
</div><!-- end todolist_container -->


















