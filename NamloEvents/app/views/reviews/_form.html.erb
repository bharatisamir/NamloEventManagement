<% javascript 'jquery.raty' %>

<div class="container" id="ReviewsContainer">
  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center"><%= @provider_user.first_name %> <%= @provider_user.last_name %></h3>
        </div>
        <%#= image_tag("application/arjun_dai.jpg", :alt =>"Arjun Cinematographer", :class =>"img-circle") %>
        <%= image_tag(@provider_profile.image.url(:thumb),:alt =>'Profile image', :class =>"img-circle") %>

        <p></p>
        <!--<p align="center">"With today's technology anyone can point and shoot a video. But, only professional cinematographer can add true magic of cinema "</p>
-->
      </div>
    </div>

    <div class="col-sm-8">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for([@service_provider,@review]) do |f| %>
              <% if @review.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

                    <ul>
                      <% @review.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <!--<div class="form-group">
                <%= f.label :reviewer_id %>
                <%= f.text_field :reviewer_id, class:'form-control' %>
              </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'reviewer_id', @user.id %>
              </div>

              <!--<div class="form-group">
                <%= f.label :serviceprovider_id %>
                <%= f.text_field :serviceprovider_id, class:'form-control' %>
              </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'serviceprovider_id', @service_provider.id %>
              </div>


              <div class="field">

                <%= f.label :rating_score %>

                <div id="star-rating">
                  <%= f.number_field :rating_score, max: '5' %>
                </div>
                <br>

              </div>

              <p></p>

              <div class="form-group">
                <%= f.label :comments %>
                <%= f.text_area :comments,rows:"5", cols:"5", class:'form-control' %>
              </div>


             <!-- <div class="hidden">
                <%= hidden_field_tag 'serviceprovider_id', @service_provider %>
              </div>-->

              <div class="actions" id="submit_button">
                <%= f.submit %>
              </div>
          <% end %>

        </div>
      </div>
    </div>

    <!--<div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center"><%= @provider_user.first_name %> <%= @provider_user.last_name %></h3>
        </div>
        <%#= image_tag("application/bikrant.jpg", :alt =>"CEO", :class =>"img-circle") %>
        <%= image_tag(@provider_profile.image.url(:thumb),:alt =>'Profile image', :class =>"img-circle") %>

        <p></p>
        &lt;!&ndash;<p align="center">"Managing event is stressful. At Namlo Event Management Inc, we take that stress away from you "</p>&ndash;&gt;
      </div>
    </div>-->
  </div>
</div>




<script>
  $(document).ready(function(){
  $('#star-rating').raty({
    path: '/assets',
    number: 5,
    scoreName: 'review[rating_score]'
  })});
</script>

