

<div class="container" id="ReviewsContainer">
  <div class="page-header">
    <h1>Review Your Service Provider </h1>
  </div>

  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Cinematographer :: Arjun</h3>
        </div>
        <%= image_tag("application/arjun_dai.jpg", :alt =>"Arjun Cinematographer", :class =>"img-circle") %>
        <p></p>
        <p align="center">"With today's technology anyone can point and shoot a video. But, only professional cinematographer can add true magic of cinema "</p>

      </div>
    </div>

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for(@review) do |f| %>
              <% if @review.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

                    <ul>
                      <% @review.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <!--<div class="form-group">
                <%= f.label :reviewer_id %>
                <%= f.text_field :reviewer_id, class:'form-control' %>
              </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'reviewer_id', @user.id %>
              </div>

              <div class="form-group">
                <%= f.label :serviceprovider_id %>
                <%= f.text_field :serviceprovider_id, class:'form-control' %>
              </div>

              <div class="field">
                <%= f.label :rating_score %>
                <%#= f.number_field :rating_score, class:'form-control' %>
                <div id="star-rating">

                </div>
              </div>

              <p></p>

              <div class="form-group">
                <%= f.label :comments %>
                <%= f.text_area :comments, class:'form-control' %>
              </div>



             <!-- <div class="hidden">
                <%= hidden_field_tag 'serviceprovider_id', @service_provider %>
              </div>-->

              <div class="actions">
                <%= f.submit %>
              </div>
          <% end %>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">CEO :: Bikrant</h3>
        </div>
        <%= image_tag("application/bikrant.jpg", :alt =>"CEO", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Managing event is stressful. At Namlo Event Management Inc, we take that stress away from you "</p>
      </div>
    </div>
  </div>
</div>


<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating_score]'
  });
</script>




