                <th>Role Name</th>
                <th>Role Description</th>
                <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
              <br>
              <% @roles.each do |role| %>
                  <tr class="success">
                    <td><%= role.name %></td>
                    <td><%= role.description %></td>

                    <% if can? :update, @role%>
                        <td><%= link_to 'Edit', edit_role_path(role), :class => 'btn btn-small btn-warning' %></td>
                    <% end %>

                    <% if can? :destroy, @role%>
                        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %></td>
                    <% end %>

                    <td><%#= link_to 'Show', role , :class => 'btn btn-small btn-info' %></td>
                  </tr>
              <% end %>

              </tbody>
            </table>
