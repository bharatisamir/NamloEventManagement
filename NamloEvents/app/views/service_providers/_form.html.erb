<div class="container" id="service_provider_container">
  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Cinematographer :: Arjun</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/arjun_dai.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"With today's technology anyone can point and shoot a video. But, the true magic of cinema can only be delivered by professional cinematographer"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for [@user, @service_provider] do |f| %>
              <% if @service_provider.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@service_provider.errors.count, "error") %> prohibited this service_provider from being saved:</h2>

                    <ul>
                      <% @service_provider.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <!--<div class="form-group">
                <%= f.label :service_category %>
                <%#=f.text_field :service_category, class: 'form-control' %>
              </div>-->

              <br>
              <% if  @service_options!= nil %>
                  <div class="form-group">
                    <%= f.label :service_id, 'Service(s)' %>
                    <%#= f.select :service_id, options_for_select(@service_options), {:multi_select => true}, id: 'provider_select' %>

                    <%#= f.select :service_id, options_for_select(@service_options), { :multiple => true } %>
                    <%= select_tag 'service_id', options_for_select(@service_options), { :multiple => true } %>
                  </div>
              <%end%>
              <br>



              <div class="form-group">
                <%= f.label :company %>
                <%= f.text_field :company, class:'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :business_phone %>
                <%= f.text_field :business_phone, class:'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :fax %>
                <%= f.text_field :fax, class:'form-control' %>
              </div>

              <!--<div class="form-group">
                <%= f.label :user_id %>
                <%= f.text_field :user_id, class:'form-control' %>
              </div>-->

              <div class="hidden">
                <%= hidden_field_tag 'user_id', @user %>
              </div>

              <div class="actions" id="submit_button">
                <%= f.submit %>
              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Photographer :: Bikrant</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/bikrant.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Photos are windows to past. Make every moments of your past memorable by hiring the right photographer"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end confirmation_container -->









