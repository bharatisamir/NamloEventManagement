
<div class="container" id="gallery_container">

  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Photographer :: Nadim</h3>
        </div>
        <%= image_tag("application/nadim1.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Photos are windows to past. Make every moments of your past memorable by hiring the right photographer"</p>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for [@portfolio,@gallery],html: {multipart: true} do |f| %>
              <%#= form_for (@gallery) do |f| %>
              <% if @gallery.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h2>

                    <ul>
                      <% @gallery.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>

              <!--<div class="field">
                <%= f.label :portfolio_id %>
                <%= f.text_field :portfolio_id %>
              </div>-->


              <div class="hidden">
                <%= hidden_field_tag 'portfolio_id', @portfolio %>
              </div>

              <div class="control-group">
                <%= f.label :pictures, :class => 'control-label' %>
                <div class="controls">
                  <%= file_field_tag "images[]", type: :file, multiple: true %>
                </div>
              </div><br>


              <div class="actions" id="submit_button">
                <%= f.submit %>
              </div>
          <% end %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->


    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">DJ :: Dinesh</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/dinesh_dai1.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Let me help you get all of your guest to the dance floor and make them groove as if no body is watchin"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end edit_registration_container -->

