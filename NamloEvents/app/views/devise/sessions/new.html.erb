
<div class="container" id="registration_container">
  <div class="page-header">
    <h2>Please, Log in here</h2>
  </div><!-- end page-header -->

  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Editor :: Sushan</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/sushan-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"World is full of imperfections, and only true professional editor can beautifully mask the blemishes of natural world"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="error_message">
                <%= devise_error_messages! %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.label :remember_me %>
                    <%= f.check_box :remember_me, class: 'form-control', id:"remember_box" %>

                  </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-primary' %>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Editor :: Swaroop</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/swaroop-200x200.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"World is full of imperfections, and only true professional editor can beautifully mask the blemishes of natural world."</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end registration_container -->

<hr>
<div class="script">

</div>
