<div class="container" id="registration_container">
  <div class="page-header">
    <h2>Please Sign up to begin</h2>
  </div><!-- end page-header -->

  <div class="row">
    <div class="col-sm-4 feature">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">DJ :: Dinesh</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/dinesh_dai1.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Let me help you get all of your guest to the dance floor and make them groove as if no body is watchin"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="list-group">
        <div class="list-group-item">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="error_message">
                <%= devise_error_messages! %>
              </div>

              <div class="form-group">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :last_name%><br />
                <%= f.text_field :last_name, class: 'form-control'%>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />

                <% if @validatable %>
                    <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", class: 'btn btn-primary' %>
              </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div><!-- end list-group-item -->
      </div><!-- end list-group -->
    </div><!-- end col-sm-4 -->

    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title" align="center">Photographer :: Nadim</h3>
        </div><!-- end panel-heading -->
        <%= image_tag("application/nadim1.jpg", :alt =>"Wedding Event", :class =>"img-circle") %>
        <p></p>
        <p align="center">"Photos are windows to past. Make every moments of your past memorable by hiring the right photographer"</p>
      </div><!-- end panel -->
    </div><!-- end col-sm-4 -->
  </div><!-- end row -->
</div><!-- end registration_container -->

<hr>
<div class="script">

</div>
